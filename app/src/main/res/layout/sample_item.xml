<view xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    class="android.support.v7.widget.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/CardView.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--you can find more information about text layout at-->
        <!--http://www.google.com/design/spec/layout/metrics-keylines.html#-->


        <view
            android:id="@+id/imageView"
            class="android.support.v7.internal.widget.TintImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/lorempixel" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
            android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
            android:text="@string/hello_world"
            android:textColor="@color/primary_text_default_material_light"
            android:theme="@style/Base.TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
            android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
            android:text="@string/date"
            android:textColor="@color/primary_text_default_material_light"
            android:theme="@style/Base.TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/textView_excerpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
            android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
            android:text="@string/excerpt"
            android:textColor="@color/primary_text_default_material_light"
            android:theme="@style/Base.TextAppearance.AppCompat.Title" />
    </LinearLayout>
</view>